<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.laxi.dao.DiscussPostMapper">
    <sql id="columns">
        <if test="true">
            id,user_id,title,content,TYPE,STATUS,create_time,comment_count,score
        </if>
    </sql>

    <select id="selectDiscussPosts" resultType="com.laxi.pojo.DiscussPost">
        select
        <include refid="columns"></include>
        FROM discuss_post
        where status!=2
        <if test="userId!=null">
            and user_id=#{userId}
        </if>
        order by type desc , create_time desc
        limit #{start},#{length}
    </select>
    <select id="selectDiscussPostRows" resultType="java.lang.Integer">
        select count(*)
        FROM discuss_post
        where status!=2
        <if test="userId!=null">
            and user_id=#{userId}
        </if>
    </select>
</mapper>

